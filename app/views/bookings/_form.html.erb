<div class="booking-form">
  <%= form_with(model: @booking, local: true, class: "booking-form") do |form| %>
    <% if @booking.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

        <ul>
          <% @booking.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, required: true %>
    </div>

    <div class="field">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, required: true %>
    </div>

    <div class="field">
      <%= form.label :phone %>
      <%= form.text_field :phone, required: true %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email, required: true %>
    </div>

    <div class="field">
      <%= form.label :start_time %>
      <%= form.datetime_select :start_time, default: Time.current.beginning_of_day + 7.hours, include_seconds: false, discard_year: true, discard_minute: true, discard_second: true, required: true %>
    </div>

    <div class="field">
      <%= form.label :hours %>
      <%= form.number_field :hours, min: 1, required: true %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>

<style>
    .booking-form {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    .field {
        margin-bottom: 20px;
    }

    .field label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .field input[type="text"],
    .field input[type="email"],
    .field input[type="number"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 3px;
        box-sizing: border-box;
    }

    .actions {
        text-align: center;
    }

    .actions input[type="submit"] {
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }

    .actions input[type="submit"]:hover {
        background-color: #45a049;
    }

    #error_explanation {
        color: red;
        margin-bottom: 20px;
    }

    #error_explanation h2 {
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    #error_explanation ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    #error_explanation li {
        margin-bottom: 5px;
    }
</style>
